	public UpdatePerformanceDescDialog(JPanel jPanel, boolean modal, int capabilityId) {
		this.setModal(modal);
		initComponents();

		this.getCapability(capabilityId);
		if (null != capability) {
			this.jTextField1.setText(capability.getCapabilityname());
			this.jTextArea1.setText(capability.getCapabilitydisp());
		}
		performanceDescPanel = (PerformanceDescPanel) jPanel;
	}

	private void getCapability(int capabilityId) {

		CapabilityService capabilityService = null;
		List<Capability> capabilityList = null;

		try {
			capabilityService = (CapabilityService) ConstantUtil.serviceFactory.newService(Services.Capability);
			capability = new Capability();
			capability.setId(capabilityId);

			capabilityList = capabilityService.select(capability);
			if (capabilityList.size() > 0) {
				capability = capabilityList.get(0);
			} else {
				capability = null;
			}

		} catch (Exception e) {
			ExceptionManage.dispose(e,this.getClass());
		} finally {
			UiUtil.closeService(capabilityService);
			capabilityList = null;
		}
	}

