	public AddCodeDialog(JPanel jPanel, boolean modal, String codeId, String groupId) {
		this.setModal(modal);
		initComponents();

		jTextField1.getDocument().addDocumentListener(new DocumentListener() {

			@Override
			public void removeUpdate(DocumentEvent e) {
				if (Verification.jtextfieldNull(jTextField1)) {
					jLabel4.setText("Code名称不能为空,或长度不能小于5");
					jButton1.setEnabled(false);
					return;
				}

				jLabel4.setText("");

				jButton1.setEnabled(true);
			}

			@Override
			public void insertUpdate(DocumentEvent e) {
				if (Verification.jtextfieldNull(jTextField1)) {
					jLabel4.setText("Code名称不能为空,或长度不能小于5");
					jButton1.setEnabled(false);
					return;
				}

				jLabel4.setText("");

				jButton1.setEnabled(true);

			}

			@Override
			public void changedUpdate(DocumentEvent e) {
				if (Verification.jtextfieldNull(jTextField1)) {
					jLabel4.setText("Code名称不能为空,或长度不能小于5");
					jButton1.setEnabled(false);
					return;
				}

				jLabel4.setText("");

				jButton1.setEnabled(true);

			}
		});

		try {
			this.codePanel = (CodePanel) jPanel;
			if (null != codeId && !"".equals(codeId)) {
				this.getCode(codeId);
				this.jTextField1.setText(code.getCodeName());
				this.jTextField2.setText(code.getCodeValue());
				this.jTextField3.setText(code.getCodeENName());
				this.jLabel1.setText("修改Code");
			} else {
				code = new Code();
				code.setCodeGroupId(Integer.parseInt(groupId));
			}
		} catch (Exception e) {
			ExceptionManage.dispose(e,this.getClass());
		}
	}

	private void getCode(String codeId) throws Exception {

		CodeService_MB codeService = null;
		List<Code> codeList = null;
		try {
			codeService = (CodeService_MB) ConstantUtil.serviceFactory.newService_MB(Services.Code);
			code = new Code();
			code.setId(Integer.parseInt(codeId));

			codeList = codeService.selectByCode(code);
			if (null != codeList && codeList.size() > 0) {
				this.code = codeList.get(0);
			}
		} catch (Exception e) {
			ExceptionManage.dispose(e,this.getClass());
		} finally {
			UiUtil.closeService_MB(codeService);
		}

	}

